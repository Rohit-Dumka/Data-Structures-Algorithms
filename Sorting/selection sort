//--------------------------------

#include <iostream>
using namespace std;
int main() {
    int a[]={10,5,8,20,2,18};
    int n=sizeof(a)/sizeof(int);
    for(int i=0;i<n;i++){
        int min=i;
        for(int j=i+1;j<n;j++){
            if(a[j]<a[min])
                min=j;
        }
       swap(a[min],a[i]);
    }

    for(int i:a)
        cout<<i<<" ";
}

//-------------------2--------------

#include <iostream>
using namespace std;
int main() {
    int a[]={10,5,8,20,2,18};
    int n=sizeof(a)/sizeof(int);
    for(int i=0;i<n-1;i++){
        int min=i;
        for(int j=i+1;j<n;j++){
            if(a[j]<a[min])
                min=j;
        }
       swap(a[min],a[i]);
    }

    for(int i:a)
        cout<<i<<" ";
}
